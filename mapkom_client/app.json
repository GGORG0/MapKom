{
    "expo": {
        "name": "MapKom",
        "slug": "mapkom",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/logos/logo-background.png",
        "scheme": "mapkom",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": false,
        "platforms": [
            "android",
            "ios",
            "web"
        ],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "xyz.ggorg.mapkom"
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/logos/logo-transparent-light-small.png",
                "monochromeImage": "./assets/logos/logo-transparent-small.png",
                "backgroundColor": "#1b5e20"
            },
            "package": "xyz.ggorg.mapkom"
        },
        "web": {
            "name": "MapKom",
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/logos/logo-circle.png"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./assets/logos/logo-transparent-light.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#1b5e20"
                }
            ],
            "expo-font",
            [
                "react-native-localization-settings",
                {
                    "languages": [
                        "en",
                        "pl"
                    ]
                }
            ],
            "@maplibre/maplibre-react-native",
            [
                "expo-location",
                {
                    "isAndroidForegroundServiceEnabled": true
                }
            ],
            [
                "react-native-edge-to-edge",
                {
                    "android": {
                        "parentTheme": "Material3"
                    }
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true
        }
    }
}